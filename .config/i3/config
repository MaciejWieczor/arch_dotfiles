# language picker mode
mode " Language" {
        bindcode 10 exec setxkbmap pl
        bindcode 11 exec setxkbmap il
        bindsym 0 exec ~/.config/i3/dunst_language.sh
        bindcode $mod+31 mode "default"
# change focus
        bindsym $mod+j focus left
        bindsym $mod+k focus down
        bindsym $mod+l focus up
        bindsym $mod+semicolon focus right
}
bindcode $mod+31 mode " Language"

