mode "  Wacom" {
        bindsym 1 exec xsetwacom set 22 MapToOutput 1920x1080+0+0; \
                exec "dunstify -h string:x-dunst-stack-tag:test Wacom 'Mapowanie tabletu do laptopa'"

        bindsym 2 exec xsetwacom set 22 MapToOutput 1920x1080+1920+0; \
                exec "dunstify -h string:x-dunst-stack-tag:test Wacom 'Mapowanie tabletu do ekranu'"
        bindsym $mod+t mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+t mode "  Wacom"

mode "⏻ Power" {
        bindsym 1 exec "~/.config/i3/dunst_countdown.sh shutdown; shutdown -h now"
        bindsym 2 exec "~/.config/i3/dunst_countdown.sh hibernate; systemctl hibernate"
        bindsym 3 exec "~/.config/i3/dunst_countdown.sh suspend; systemctl suspend"
        bindsym 4 exec "~/.config/i3/dunst_countdown.sh reboot; reboot"
        bindsym 5 exec "shutdown -h 44; dunstctl close-all ; dunstify 'Komputer zostanie wyłączony za 44 minuty!'"
        bindsym 6 exec "shutdown -h 33; dunstctl close-all ; dunstify 'Komputer zostanie wyłączony za 33 minuty!'"
        bindsym 7 exec "shutdown -c; dunstctl close-all ; dunstify 'Anulowanie komendy wyłączania'"
        bindsym 0 exec ~/.config/i3/dunst_power.sh

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+p mode "default"
}
bindsym $mod+p mode "⏻ Power"


mode "Photo" {
        bindsym 0 exec "dunstify -h string:x-dunst-stack-tag:test 1 'Screenshot z zaznaczeniem'"
        bindsym 1 exec "~/.scripts/ssarea.sh"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+q mode "default"
}
bindsym $mod+q mode "Photo"

# resize window (you can also use the mouse for that)
mode " Resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode " Resize"

